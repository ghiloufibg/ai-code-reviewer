# AI Code Reviewer - Environment Configuration Template
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to git (it's in .gitignore)

# =============================================================================
# GitLab Configuration
# =============================================================================

# GitLab Personal Access Token
# Required scopes: api, read_api, read_repository, write_repository
GITLAB_TOKEN=glpat-your-gitlab-token-here

# GitHub Token (optional - set if using GitHub integration)
GITHUB_TOKEN=ghp_your_github_token_here

# =============================================================================
# LLM Configuration
# =============================================================================

# LLM Provider type (openai, anthropic, gemini, ollama)
LLM_PROVIDER=openai

# LLM API base URL
# For OpenAI: https://api.openai.com/v1
# For LM Studio: http://host.docker.internal:1234/v1
# For OpenRouter: https://openrouter.ai/api/v1
LLM_BASE_URL=https://api.openai.com/v1

# Model name
LLM_MODEL=gpt-4o

# API Key for LLM provider
LLM_API_KEY=sk-your-api-key-here

# LLM request timeout in seconds
LLM_TIMEOUT=120

# Enable streaming responses
LLM_STREAM=true

# =============================================================================
# LLM Worker Configuration
# =============================================================================

# LLM Worker provider (defaults to openai if not set)
LLM_WORKER_PROVIDER=openai

# Alternative provider keys (optional)
ANTHROPIC_API_KEY=
ANTHROPIC_MODEL=claude-sonnet-4-20250514

GEMINI_API_KEY=
GEMINI_MODEL=gemini-1.5-pro

OLLAMA_BASE_URL=http://host.docker.internal:11434
OLLAMA_MODEL=llama3

# =============================================================================
# Application Configuration
# =============================================================================

# Spring Boot profile
SPRING_PROFILES_ACTIVE=local

# Logging level for application
LOG_LEVEL=DEBUG

# LangChain4j logging level
LANGCHAIN4J_LOG_LEVEL=INFO

# =============================================================================
# Jira Configuration (optional)
# =============================================================================

# Jira API Token
JIRA_TOKEN=your-jira-token-here

# Jira Base URL (optional - defaults to http://host.docker.internal:8080)
# JIRA_BASE_URL=https://your-jira-instance.atlassian.net

# Ticket analysis configuration
TICKET_ANALYSIS_ENABLED=true

# =============================================================================
# PostgreSQL Configuration
# =============================================================================

# PostgreSQL credentials
POSTGRES_USER=ai_reviewer
POSTGRES_PASSWORD=dev_password

# =============================================================================
# Redis Configuration (used by llm-worker)
# =============================================================================

# Redis host and port (defaults provided in docker-compose)
# REDIS_HOST=localhost
# REDIS_PORT=6379

# =============================================================================
# Security Configuration (optional)
# =============================================================================

# Enable/disable security globally
SECURITY_ENABLED=true

# Enable/disable API key authentication
SECURITY_API_KEY_ENABLED=true

# CI/CD API Key (64-character secure key)
API_KEY_CICD=your-64-character-api-key-here

# =============================================================================
# pgAdmin Configuration (optional)
# =============================================================================

PGADMIN_EMAIL=admin@admin.com
PGADMIN_PASSWORD=admin
